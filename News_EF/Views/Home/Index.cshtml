@using News_EF.Models;
@model List<News>;


@{
    Layout = "~/Views/_Layout.cshtml";
}

@{
    if (Model.Count() == 0)
    {
        //TODO добавить картинку смайл грустный
        <li class="no-news-item">
            <h1>Нет новостей :(</h1>
        </li>
    }
    else
    {
        foreach (var item in Model)
        {
            <li class="news-item">
                <div class="news-title">
                   <a href="~/Home/Read/?id=@item.Id">
                       <h2 class="news">@item.Title</h2>
                   </a> 
                </div>
                <div class="news-info">
                    <p>@item.Id</p>
                    <p>@item.Author</p>
                    <p>@item.Date.ToShortDateString()</p>
                </div>
            </li>
        }
    }
}
